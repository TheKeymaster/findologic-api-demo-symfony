{# @var product \FINDOLOGIC\Api\Responses\Json10\Properties\Item #}
{% set product = item %}

<div class="col s12 m6 l3">
    <a href="{{ product.url }}" target="_blank">
        <div class="card">
            <div class="card-image">
                <img src="{{ product.imageUrl }}">
                <a class="btn-floating halfway-fab waves-effect waves-light background-secondary tooltipped" data-tooltip="Add to basket"><i class="material-icons">add_shopping_cart</i></a>
            </div>
            <div class="card-content">
                <span class="card-title">{{ product.name }}</span>
                <p>{{ product.summary | u.truncate(35, '...') }}</p>
            </div>
            <div class="card-action">
                <span>{{ product.price|number_format(2, '.', ',') }} {{ currencySymbol }}</span>
                <button class="btn background-primary details">Details</button>
            </div>
        </div>
    </a>
</div>
